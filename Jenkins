pipeline {
    agent any

    environment {
        AWS_REGION            = "ap-south-1"
        AWS_ACCESS_KEY_ID     = credentials('aws-creds')
        AWS_SECRET_ACCESS_KEY = credentials('aws-creds')
        PATH                  = "$WORKSPACE/terraform-bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/perisetlapujithalakshmi/terraform_usecase.git'
            }
        }

        stage('Install Terraform') {
            steps {
                sh '''
                    mkdir -p $WORKSPACE/terraform-bin
                    wget https://releases.hashicorp.com/terraform/1.5.5/terraform_1.5.5_linux_amd64.zip
                    unzip terraform_1.5.5_linux_amd64.zip -d $WORKSPACE/terraform-bin
                    chmod +x $WORKSPACE/terraform-bin/terraform
                '''
            }
        }

        stage('Check Terraform') {
            steps {
                sh '$WORKSPACE/terraform-bin/terraform -version'
            }
        }

        stage('Terraform Init') {
            steps {
                sh '$WORKSPACE/terraform-bin/terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                sh '$WORKSPACE/terraform-bin/terraform plan -out=tfplan'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh '$WORKSPACE/terraform-bin/terraform apply -auto-approve tfplan'
            }
        }

        stage('Outputs') {
            steps {
                sh '$WORKSPACE/terraform-bin/terraform output'
            }
        }
    }
}
